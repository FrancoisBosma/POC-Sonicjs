<div class="col-lg-12 admin-media-list">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-align-justify"></i> Media
            <a href="javascript:void(0)" onclick="openNewContentTypeModal()"
                class="btn btn-success float-right new-content-type">New Media</a>
        </div>
        <div class="card-body page-list">


            <form class="dropzone2" id="sonicjs-dropzone">Drop Files Anywhere On This Page</form>

            <div class="row">
                {{#each data}}

                <div class="col-md-3">


                    <a tabindex="0" class="btn btn-sm btn-danger btn-media-delete" role="button" data-html="true" data-toggle="popover"
                data-trigger="focus" aria-label="Delete {{ this.data.title }}" title="Delete <b>{{ this.data.title }}</b> Forever?" 
                data-content="<a href='/media/{{ this.id }}/{{../data.sessionID}}'
   class='btn btn-sm btn-danger rmargin custom-delete'>Confirm Delete</a>
">Delete</a>


                    <div class="thumbnail">
                        <a href="/admin/content/edit/media/{{ this.id }}">
                            <img src="{{ this.data.src }}"
                                style="width:100%">
                            <div class="caption">
                                <p>{{this.data.file}}</p>
                            </div>
                        </a>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>
    </div>
</div>