<div class="col-lg-12">
  <div class="card">
    <div class="card-header">
      <i class="fa fa-align-justify"></i> Backups
      <a href="{{data.backupUrl}}" class="btn btn-success float-right">Backup Now
        </a>
    </div>
    <div class="card-body page-list">

        <form class="dropzone2" id="sonicjs-dropzone">Drop .Zip Files Anywhere On This Page
            <span>Files will be uploaded but not automatically restored</span></form>

        <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong>Warning!</strong> You must restart this website after restoring. Clicking "Restore" below will delete all existing content. Always backup before restoring.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="alert"></div>
      <table class="table table-responsive-sm table-striped">
        <thead>
          <tr>
            <th>File</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each data.files}}
          <tr>
            <td><a target="_blank" href="{{ this }}">{{ this }}</a></td>
            <td>

              <a class="btn btn-sm btn-primary rmargin" href="{{ ../data.restoreUrl }}?file={{this}}">Restore</a>

              <a tabindex="0" class="btn btn-sm btn-danger" role="button" data-html="true" data-toggle="popover"
                data-trigger="focus" aria-label="Delete {{ this.data.title }}" title="Delete <b>{{ this.data.title }}</b> Forever?" 
                data-content="<a href='/content/{{ this.id }}/{{../data.sessionID}}'
   class='btn btn-sm btn-danger rmargin custom-delete'>Confirm Delete</a>
">Delete</a>

              <div class="collapse" style="margin: 12px 0 0; max-width:300px;" id="collapse{{ this.systemId }}">
                <div class="card card-body">
                  <a class='btn btn-sm btn-danger' href="#" onclick='deleteContentType({{ this.id }})'>Confirm Delete
                    {{ this.title }}?</a> </div>
              </div>

            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>
</div>
