<!doctype html>
<html lang="en" class="{{data.pageCssClass}}">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="{{ data.metaDescription }}">
  <meta name="generator" content="SonicJs">
  <meta name="version" content="{{ data.appVersion }}">
  <link rel="icon" href="/assets/img/favicon.ico">

  <title>{{data.metaTitle}}</title>

  <!-- Web Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family={{data.siteSettings.fontHeaders}}">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family={{data.siteSettings.fontDefault}}">
  <style>
    body,
    p {
      font-family: '{{data.siteSettings.fontDefault}}',
      serif !important;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: '{{data.siteSettings.fontHeaders}}',
      serif;
    }
  </style>

  {{{data.cssLinks}}}

  {{#if data.showPageBuilder}}
  <link href="/page-builder/css/page-builder.css" rel="stylesheet">
  {{/if}}

  <button class="sidebar-expander" id="sidebar-expander" type="button"></button>

  <base href="/">

  {{{ data.headerJs }}}

</head>

<body>
  <input type="hidden" name="page-id" id="page-id" value="{{data.id}}">

  {{> menu level='1'}}

  {{> menu level='2'}}

  <main role="main">

    {{#if data.showPageBuilder}}
    {{> page-builder }}
    {{/if}}

    <input id="sessionID" type="hidden" value="{{data.sessionID}}"/>
    {{{body}}}

  </main><!-- /.container -->

  <footer class="footer">
    <div class="container">
      <div class="row">
        <div class="col footer-top-margin">
          <p>Powered by <a href="https://sonicjs.com">SonicJs Node CMS</a></p>
        </div>
        <div class="col social text-center">
          <ul>
            <li><a target="_blank" href="https://github.com/lane711/sonicjs"><i class="fa fa-github"></i></a></li>
            <li><a target="_blank" href="https://www.youtube.com/channel/UCm_B7S9smSvtrv0nAt2vrqw"><i
                  class="fa fa-youtube"></i></a></li>
            <li><a target="_blank" href="https://www.facebook.com/SonicJs-Nodejs-CMS-113052493788728"><i
                  class="fa fa-facebook"></i></a></li>
            <li><a target="_blank" href="https://twitter.com/SonicJs1"><i class="fa fa-twitter"></i></a></li>
          </ul>
        </div>
        <div class="col text-right footer-top-margin">
          <p>Â© 2020, SonicJS. All rights reserved.</p>
        </div>
      </div>
    </div>
  </footer>

  {{{data.jsLinks}}}

</body>

</html>
